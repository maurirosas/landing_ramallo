<nav class="navbar">
  <div class="logo-container">
    <img class="logo-img" src="/man_logo.png" alt="MAN Logo" />
  </div>

  <input class="navbar-input" type="checkbox" id="sidebar-active" />
  <label for="sidebar-active" class="open-sidebar-button">
    <svg
      class="navbar-icon"
      xmlns="http://www.w3.org/2000/svg"
      height="32px"
      viewBox="0 -960 960 960"
      width="32px"
      fill="#1f1f1f"
      ><path
        d="M120-240v-80h720v80H120Zm0-200v-80h720v80H120Zm0-200v-80h720v80H120Z"
      ></path></svg
    >
  </label>

  <label id="overlay" for="sidebar-active"></label>
  <div class="links-container">
    <label for="sidebar-active" class="close-sidebar-button">
      <svg
        class="navbar-icon"
        xmlns="http://www.w3.org/2000/svg"
        height="32px"
        viewBox="0 -960 960 960"
        width="32px"
        fill="#1f1f1f"
        ><path
          d="m256-200-56-56 224-224-224-224 56-56 224 224 224-224 56 56-224 224 224 224-56 56-224-224-224 224Z"
        ></path></svg
      >
    </label>
    <a class="navbar-link home-link" href="#">Inicio</a>
    <a class="navbar-link" href="#">Nosotros</a>
    <a class="navbar-link" href="#">Evento</a>
    <a class="navbar-link" href="#">Registro</a>
  </div>
</nav>

<style>
  .navbar {
    align-items: center;
    background-color: var(--black);
    display: flex;
    height: 90px;
    justify-content: space-between;
    font-weight: 700;
    font-size: 18px;
    position: relative;
    width: 100%;
    box-sizing: border-box;
    padding: 0 20px;
  }

  .logo-container {
    display: flex;
    align-items: center;
    height: 100%;
  }

  .logo-img {
    margin-left: 60%;
    height: 55px;
    width: auto;
    max-width: 100%;
  }

  .links-container {
    height: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-end;
    margin-right: 5%;
  }

  .navbar-link {
    height: 100%;
    padding: 0 50px;
    display: flex;
    align-items: center;
    text-decoration: none;
    color: var(--white);
    white-space: nowrap;
  }

  .navbar-link:hover {
    color: var(--red);
  }

  .navbar-icon {
    fill: var(--white);
  }

  #sidebar-active {
    display: none;
  }

  .open-sidebar-button,
  .close-sidebar-button {
    padding: 0 10px;
    display: none;
  }

  @media (max-width: 940px) {
    .navbar {
      justify-content: space-between;
      padding: 0 15px;
    }

    .links-container {
      position: fixed;
      top: 0;
      right: 0;
      bottom: 0;
      width: 80%;
      max-width: 300px;
      margin-right: 0;
      height: 100vh;
      background-color: var(--black);
      transform: translateX(100%);
      transition: transform 0.3s ease;
      flex-direction: column;
      align-items: flex-start;
      justify-content: flex-start;
      padding-top: 60px;
      z-index: 1000;
      box-shadow: -5px 0 15px rgba(0, 0, 0, 0.3);
      overflow-y: auto;
    }

    .navbar-link {
      width: 100%;
      height: auto;
      padding: 15px 25px;
      box-sizing: border-box;
    }

    .open-sidebar-button {
      display: flex;
      align-items: center;
      cursor: pointer;
      z-index: 999;
      margin-left: auto;
      padding: 0 5px;
    }

    .close-sidebar-button {
      display: block;
      position: absolute;
      top: 20px;
      right: 20px;
      cursor: pointer;
      z-index: 1001;
    }

    #overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      opacity: 0;
      visibility: hidden;
      transition: 0.3s;
      z-index: 999;
    }

    #sidebar-active:checked ~ .links-container {
      transform: translateX(0);
    }

    #sidebar-active:checked ~ #overlay {
      opacity: 1;
      visibility: visible;
    }
  }
</style>
